generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Filter {
  id          Int    @id @default(autoincrement())
  name        String
  description String
}

model Partner {
  id               Int       @id @default(autoincrement())
  brand_name       String    @unique
  email            String
  address          String
  organization     String
  inn              String
  phone_number     String
  socials          String
  schedule         String
  type_of_activity String
  description      String
  // logo             String
  // bg_image         String
  password         String
  Product          Product[]
}

model Product {
  id              Int     @id @default(autoincrement())
  description     String
  date            String
  characteristics String
  price           Int
  owner           Partner @relation(fields: [owner_id], references: [id])
  owner_id        Int
}
