generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Filter {
  id          Int    @id @default(autoincrement())
  name        String
  description String
}

model Partner {
  id               Int       @id @default(autoincrement())
  brand_name       String    @unique
  email            String
  address          String
  organization     String
  inn              String
  phone_number     String
  socials          String
  schedule         String
  type_of_activity String
  description      String
  role             String    @default("PARTNER")
  // logo             String
  // bg_image         String
  password         String
  Product          Product[]
}

model Product {
  id                 Int                  @id @default(autoincrement())
  description        String
  pulbication_date   String
  expiration_date    String
  price              Int
  owner              Partner              @relation(fields: [owner_id], references: [id])
  owner_id           Int
  product_Attributes Product_Attributes[]
}

model Attribute {
  id                 Int                  @id @default(autoincrement())
  name               String               @unique
  attribute_Value    Attribute_Value[]
  product_Attributes Product_Attributes[]
}

model Attribute_Value {
  id                 Int                  @id @default(autoincrement())
  value              String
  attribute          Attribute            @relation(fields: [attribute_id], references: [id])
  attribute_id       Int
  product_Attributes Product_Attributes[]

  @@unique([attribute_id, value])
}

model Product_Attributes {
  id           Int             @id @default(autoincrement())
  product      Product         @relation(fields: [product_id], references: [id])
  product_id   Int
  attribute    Attribute       @relation(fields: [attribute_id], references: [id])
  attribute_id Int
  value        Attribute_Value @relation(fields: [value_id], references: [id])
  value_id     Int
}
